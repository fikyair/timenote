<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 边框的色值 -->
    <item>
        <shape>
            <solid android:color="#000000"/>
        </shape>
    </item>
    
    <!-- 主体背景色值 -->
    <!-- 此处定义只有下边有边框 高度为1像素-->
    <item android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
	    <!--边框里面背景颜色 白色-->
	    <shape>
	        <solid android:color="#FFFFFF" />
	         <corners android:radius="20px"/>
	    </shape>
	</item>

</layer-list>
