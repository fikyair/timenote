<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp" >

        <ImageView
            android:id="@+id/register_layout_imagetx"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/moren"
            android:scaleType="fitXY" />

        <EditText
            android:id="@+id/register_layout_uname"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/text_shape"
            android:hint="输入账号" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="提示：账号是用户唯一的登录凭证，请妥善保管。账号只能由字母组成。"
            android:textColor="#B3B3B3"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/register_layout_upwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_shape"
            android:hint="输入密码"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="提示：密码是用户是用户登录的重要数据，不得少于六位数字。"
            android:textColor="#B3B3B3"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/register_layout_rpwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_shape"
            android:hint="确认密码"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="提示：两次密码保持一致。"
            android:textColor="#B3B3B3"
            android:textSize="10dp" />

        <RadioGroup
            android:id="@+id/register_layout_rgp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/register_layout_rbtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男" />

            <RadioButton
                android:id="@+id/register_layout_rbtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女" />
        </RadioGroup>

        <Spinner
            android:id="@+id/register_layout_spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:entries="@array/province" />

        <Spinner
            android:id="@+id/register_layout_spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!--
      注册按钮被顶部导航的完成所代替
    <Button
        android:id="@+id/btn_register"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_dl_selector"
        android:text="立即注册" />
        -->

    </LinearLayout>

</ScrollView>