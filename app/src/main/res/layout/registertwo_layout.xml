<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp" >

        <TextView
            android:id="@+id/RT_TV_information"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="填写信息加入TIME"
            android:textSize="25dp" />

        <View
            android:id="@+id/RT_v_line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EBEBEB" />

        <TextView
            android:id="@+id/RT_TV_informationaccount"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="23dp"
            android:gravity="center_horizontal"
            android:text="设置一个密码："
            android:textSize="20dp" />

        <EditText
            android:id="@+id/RT_register_layout_upwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_shape"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="提示：密码是用户是用户登录的重要数据，不得少于六位数字。"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/RT_TV_informationaccount"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="23dp"
            android:gravity="center_horizontal"
            android:text="再确认一下密码："
            android:textSize="20dp" />

        <EditText
            android:id="@+id/RT_register_layout_rpwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_shape"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="提示：两次密码保持一致。"
            android:textSize="10dp" />
    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
       android:gravity="center_horizontal"
        android:paddingBottom="50dp"
    >

        <Button
            android:id="@+id/RT_bt_two"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:background="@drawable/bt_register_res"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="n e x t"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>