<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="填写信息加入TIME"
            android:textSize="25dp" />

        <View
            android:id="@+id/RTH_v_line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EBEBEB" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="你在哪？"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/RTH_spnRegisterProvinces"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:entries="@array/province"
            android:paddingLeft="12dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/RTH_lblRegisterProvincesTip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RTH_spnRegisterProvinces"
            android:layout_marginTop="5dp"
            android:text="提示：请选择您所在的省份名称（直辖市名称）"
            android:textSize="10dp" />

        <Spinner
            android:id="@+id/RTH_spnRegisterCitys"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_below="@id/RTH_spnRegisterProvinces"
            android:layout_marginTop="30dp"
            android:paddingLeft="12dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/RTH_lblRegisterCitysTip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RTH_spnRegisterCitys"
            android:layout_marginTop="5dp"
            android:text="提示：请选择您所在的城市名称"
            android:textSize="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="你是男生还是女生呢？"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/RTH_rdoGupRergisterSex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RTH_lblRegisterCitysTip"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/RTH_rdoRegisterMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="男性"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/RTH_rdoRegisterFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女性"
                android:textSize="14dp" />
        </RadioGroup>
    </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
       android:gravity="center_horizontal"
        android:paddingBottom="50dp"
    >

        <Button
            android:id="@+id/RTH_bt_three"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:background="@drawable/bt_register_res"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="n e x t"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>